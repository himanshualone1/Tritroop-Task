<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <div class="signup-box slide-in">
            <h2 class="fade-in">Signup</h2>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <input type="text" id="name" name="username" required placeholder="Enter your name" class="input-field">
                </div>
                <% if (typeof successMessage !== 'undefined') { %>
                <div class="alert alert-success"><%= successMessage %></div>
                <% } %>
                <div class="form-group">
                    <input type="password" id="password" name="password" required placeholder="Enter your password" class="input-field">
                </div>
                <button type="submit" class="submit-btn">Signup</button>
            </form>
        </div>
    </div>
</body>
</html